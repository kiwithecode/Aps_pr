<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA500"> <!-- Color naranja -->

    <!-- Lottie Animation View -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="246dp"
        android:layout_height="400dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/asado" /> <!-- Reemplaza "nombre_del_archivo_json" con el nombre de tu archivo Lottie -->

    <TextView
        android:id="@+id/splashText"
        android:layout_width="322dp"
        android:layout_height="81dp"
        android:layout_below="@id/lottieAnimationView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/snacko"
        android:text="La gallina deliciosa"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>
